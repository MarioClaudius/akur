<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/orange">

    <Button
        android:id="@+id/btn_history"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="@color/orange"
        android:stateListAnimator="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/waiting_logo"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:id="@+id/middle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nomor_resi_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JNE - 12890382983"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_shipment_type_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reguler"
                    android:fontFamily="@font/comfortaa"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_day_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26 Desember"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/tv_year_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2021 - 12.54"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Packet Information"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Packet Code : "
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"/>

                <TextView
                    android:id="@+id/tv_id_qr_information_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#30308"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Receipt Number : "
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"/>

                <TextView
                    android:id="@+id/tv_number_receipt_information_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="908949238472"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Shipment Delivery : "
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"/>

                <TextView
                    android:id="@+id/tv_shipment_name_information_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Si Cepat"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Service : "
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"/>

                <TextView
                    android:id="@+id/tv_shipment_type_information_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="HALU"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Status : "
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"/>

                <TextView
                    android:id="@+id/tv_status_information_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Delivered"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Date : "
                    android:textColor="@color/black"
                    android:fontFamily="@font/comfortaa"/>

                <TextView
                    android:id="@+id/tv_date_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="24 September 2021, 11:30"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_done_information_detail"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/comfortaa"
                android:text="Done"
                android:textColor="@color/white"
                android:backgroundTint="@color/hijau_logo"
                app:cornerRadius="30dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
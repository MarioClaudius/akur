<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_btn_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/hijau_logo"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_edittext_abu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_lock"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_oldpassword_changepw"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/background_edittext_abu"
                android:lines="1"
                android:hint="Old Password"
                android:textColor="@color/hijau_logo"
                android:fontFamily="@font/comfortaa"
                android:textColorHint="@color/hijau_logo"
                android:padding="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_visible"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/background_edittext_abu"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/background_edittext_abu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_lock"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_newpassword_changepw"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/background_edittext_abu"
                android:lines="1"
                android:hint="New Password"
                android:textColorHint="@color/hijau_logo"
                android:textColor="@color/hijau_logo"
                android:fontFamily="@font/comfortaa"
                android:padding="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_visible"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/background_edittext_abu"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/background_edittext_abu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_lock"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/edt_confirmpassword_changepw"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/background_edittext_abu"
                android:lines="1"
                android:hint="Confirm Password"
                android:textColorHint="@color/hijau_logo"
                android:textColor="@color/hijau_logo"
                android:fontFamily="@font/comfortaa"
                android:padding="10dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_visible"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/background_edittext_abu"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm_changepw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Confirm"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_cancel_changepw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Cancel"
            android:textColor="@color/hijau_logo"/>

    </LinearLayout>

</LinearLayout>